<p style="color: green"><%= notice %></p>
<%= turbo_stream_from dom_id(@room) %>

<%= turbo_stream_from current_user&.to_gid_param %>
<% if current_user&.admin? %>
  <%= turbo_stream_from ["admin", dom_id(@room)], id: "admin" %>
<% end %>

<%= render @room %>

<div>
  <%= link_to "Edit this room", edit_room_path(@room) %> |
  <%= link_to "Back to rooms", rooms_path %>
  <%= button_to "Destroy this room", @room, method: :delete %>
</div>
